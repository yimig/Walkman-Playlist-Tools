<Window x:Class="LanguageDetectTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LanguageDetectTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox Name="testBox" Height="390"></TextBox>
            <StackPanel Orientation="Horizontal">
                <TextBlock Name="resultBox" Width="600"></TextBlock>
                <Button Name="startTest" Width="200" Click="StartTest_OnClick">检测！</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
