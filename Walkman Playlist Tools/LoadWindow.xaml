<Window x:Class="Walkman_Playlist_Tools.LoadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Walkman_Playlist_Tools"
        mc:Ignorable="d"
        Title="加载中..." Height="150" Width="500" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Icon="Icon/reflesh.ico" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <ProgressBar Name="ProgressBar"  Grid.Row="1" Margin="50,10,50,10" IsIndeterminate="False" Maximum="100" Minimum="0"></ProgressBar>
        <TextBlock Name="TextBlock" Margin="50,20,50,0" Text="初始化中，请稍后..." VerticalAlignment="Center" FontSize="12"></TextBlock>
        <TextBlock Name="PercentText" Grid.Row="1" Text="0%" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
    </Grid>
</Window>
