<Window x:Class="Walkman_Playlist_Tools.RenameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Walkman_Playlist_Tools"
        mc:Ignorable="d"
        Title="重命名" Height="140" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Icon="Icon/rename.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox Name="TextBox" Margin="10" Grid.ColumnSpan="2" Background="White" VerticalContentAlignment="Center" FontSize="15" KeyDown="TextBox_KeyDown"></TextBox>
        <Button Margin="30,10,30,10" Grid.Row="3" Background="#FFEEF5FD" Click="Button_Click">
            <Image Source="Icon/yes.ico"></Image>
        </Button>
        <Button Margin="30,10,30,10" Grid.Row="3"  Grid.Column="2" Background="#FFEEF5FD" Click="Button_Click_1">
            <Image Source="Icon/clearitems.ico"></Image>
        </Button>
    </Grid>
</Window>
